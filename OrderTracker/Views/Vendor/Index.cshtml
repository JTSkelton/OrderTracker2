@{
  Layout = "_Layout";
}

@using OrderTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendor/@vendor.Id'>@vendor.Name</a></h3>
}

<a href='/'><button type="button" class="btn btn-success" style="width:150px">Back home</button></a>