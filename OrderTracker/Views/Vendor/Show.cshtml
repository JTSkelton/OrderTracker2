@{
  Layout = "_Layout";
}

@using OrderTracker.Models;

<h3>Here are all the Orders for this vendor:</h3>

<ol>
@foreach (Order order in @Model["Orders"])
{
  <li><a href='/vendor/@Model["Vendor"].Id/order/@order.Id'>@order.Description</a></li>
}
</ol>
<a href='/vendor/@Model["Vendor"].Id/order/new'><button type="button" class="btn btn-success" style="width:150px">Add a new Order</button></a>
<a href='/vendor'><button type="button" class="btn btn-success" style="width:150px">Back to Vendors</button></a>
<a href='/'><button type="button" class="btn btn-success" style="width:150px">Back home</button></a>
